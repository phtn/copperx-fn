{
  "name": "copperx-fn",
  "version": "0.1.0",
  "description": "Pure function client SDK for Copperx API",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "files": [
